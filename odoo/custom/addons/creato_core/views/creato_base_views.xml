<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===================== -->
    <!-- Tree View -->
    <!-- ===================== -->
    <record id="view_creato_base_tree" model="ir.ui.view">
        <field name="name">creato.base.tree</field>
        <field name="model">creato.base</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
                <field name="active"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- ===================== -->
    <!-- Form View -->
    <!-- ===================== -->
    <record id="view_creato_base_form" model="ir.ui.view">
        <field name="name">creato.base.form</field>
        <field name="model">creato.base</field>
        <field name="arch" type="xml">
            <form string="Creato Record" create="true" edit="true">
                <header>
                    <button name="action_activate"
                            type="object"
                            string="Activate"
                            invisible="state != 'draft'"/>

                    <button name="action_archive"
                            type="object"
                            string="Archive"
                            invisible="state != 'active'"/>

                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,active,archived"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>
                </sheet>

                <!-- Chatter (requires mail.thread in model) -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ===================== -->
    <!-- Action -->
    <!-- ===================== -->
    <record id="action_creato_base" model="ir.actions.act_window">
        <field name="name">Creato Records</field>
        <field name="res_model">creato.base</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- ===================== -->
    <!-- Menus -->
    <!-- ===================== -->
    <menuitem id="menu_creato_root"
              name="Creato"
              sequence="10"
              web_icon="base,static/description/icon.png"/>

    <menuitem id="menu_creato_base"
              name="Core Records"
              parent="menu_creato_root"
              action="action_creato_base"
              sequence="20"/>

</odoo>
