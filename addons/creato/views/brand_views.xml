<odoo>

    <!-- List View -->
    <record id="view_creato_brand_list" model="ir.ui.view">
        <field name="name">creato.brand.list</field>
        <field name="model">creato.brand</field>
        <field name="arch" type="xml">
            <list string="Brands">
                <field name="name"/>
                <field name="product_name"/>
                <field name="location"/>
                <field name="email"/>
                <field name="active"/>
            </list>
        </field>
    </record>


    <!-- Form View -->
    <record id="view_creato_brand_form" model="ir.ui.view">
        <field name="name">creato.brand.form</field>
        <field name="model">creato.brand</field>
        <field name="arch" type="xml">
            <form string="Brand">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_name"/>
                        <field name="location"/>
                        <field name="email"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_creato_brand" model="ir.actions.act_window">
        <field name="name">Brands</field>
        <field name="res_model">creato.brand</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
